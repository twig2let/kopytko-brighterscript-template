{
    "search.exclude": {
        "**/.vscode": true,
        "**/build": true,
        "**/out": true,
    },
    "editor.autoClosingQuotes": "never",
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": true,
    "brightscript.enableLanguageServer": true,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/dist/**": true,
        "**/node_modules": true
    },
    "files.watcherExclude": {
        "**/dist/**": true,
        "**/out/**": true
    },
    "brightscript.format.keywordCaseOverride": {
        "void": "title",
        "invalid": "lower",
        "not": "upper",
        "or": "upper",
        "return": "lower",
        "else": "lower",
        "if": "lower",
        "then": "lower",
        "for": "lower",
        "print": "lower",
        "stop": "lower",
        "as": "lower",
        "endfunction": "lower",
        "endif": "lower",
        "endsub": "lower",
        "endwhile": "lower",
        "exitwhile": "lower",
        "exitfor": "lower",
        "endfor": "lower",
        "elseif": "lower",
        "#elseif": "lower",
        "#endif": "lower",
        "endclass": "lower",
        "endnamespace": "lower",
        "eval": "lower",
        "to": "lower",
        "step": "lower",
        "exit": "lower",
        "each": "lower",
        "while": "lower",
        "function": "lower",
        "sub": "lower",
        "goto": "lower",
        "dim": "lower",
        "interface": "lower",
        "let": "lower",
        "next": "lower",
        "#if": "lower",
        "#else": "lower",
        "#const": "lower",
        "class": "lower",
        "namespace": "lower",
        "import": "lower",
        "and": "upper"
    },
    "brightscript.format.typeCase": "title",
    "editor.formatOnSave": true,
    "brightscript.format.typeCaseOverride": {
        "invalid": "lower"
    },
    "brightscript.format.keywordCase": "title",
    "editor.detectIndentation": false,
    "texty": {
        "customCommands": {
            "convertToLowerResolutionExcludingDecimals": {
                "title": "Convert layout selection to a lower resolution (i.e. FHD->HD, HD->SD) (excluding decimals)",
                "script": "selection.split(\/(\\d*)(.d+)?\/g).map(v => isNaN(parseInt(v)) ? v : parseFloat(v) > 0 && parseFloat(v) < 1 ? v : (parseInt(v)*2/3).toFixed()).join('')"
            },
            "convertToLowerResolutionIncludingDecimals": {
                "title": "Convert layout selection to a lower resolution (i.e. FHD->HD, HD->SD) (including decimals)",
                "script": "selection.split(\/(\\d*)(.d+)?\/g).map(v => isNaN(parseInt(v)) ? v : (parseInt(v)*2/3).toFixed()).join('')"
            }
        }
    }
}